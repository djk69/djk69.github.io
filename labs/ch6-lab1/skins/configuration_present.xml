<config>
   <cssSkin>skins/present/spritesheet.min.css</cssSkin>
   <controlBarAutoHide>true</controlBarAutoHide>
   <tocTitleColor>0xFFFFFF</tocTitleColor>
   <tocItemTextColor>0xFFFFFF</tocItemTextColor>
   <tocItemUpColor>0x101010</tocItemUpColor>
   <tocItemOverColor>0x101010</tocItemOverColor>
   <tocItemDownColor>0x101010</tocItemDownColor>
   <tocItemSelectedUpColor>0x3f3d3d</tocItemSelectedUpColor>
   <tocItemSelectedOverColor>0x3f3d3d</tocItemSelectedOverColor>
   <tocItemSelectedDownColor>0x3f3d3d</tocItemSelectedDownColor>
   <chrome>
      <widgets>
         <widget height="44"
                 horizontalAlign="center"
                 id="controlBar"
                 layoutMode="horizontal"
                 type="ControlBar"
                 verticalAlign="top">

            <widget id="leftMargin"
                    type="Widget"
                    width="0"/>

            <widget id="rewindbutton"
                    type="RewindButton"/>

            <widget horizontalAlign="left"
                    left="0"
                    top="0"
                    verticalAlign="center">

               <widget id="playButton"
                       type="playButton"/>

               <widget id="pauseButton"
                       type="pauseButton"/>

            </widget>

            <widget id="previousButton"
                    type="PlaylistPreviousButton"/>

            <widget id="nextButton"
                    type="PlaylistNextButton"/>

            <widget horizontalAlign="center"
                    id="scrubBar"
                    percentWidth="100"
                    thumbOffsetY="2"
                    markerWidth="3"
                    markerHeight="3"
                    markerColor="0xF0F0F0"
                    markerColorAlpha="1"
                    markerCorner="2"
                    top="0"
                    includeTimeHint="false"
                    type="scrubBar"
                    verticalAlign="top"/>

            <widget id="spacerAfterScrubBar"
                    type="Widget"
                    width="10"/>

            <widget fontSize="11"
                    horizontalAlign="right"
                    id="timeViewWidget"
                    textColor="0x414042"
                    top="0"
                    type="TimeViewWidget"
                    verticalAlign="middle"/>

            <widget horizontalAlign="right"
                    layoutMode="horizontal"
                    verticalAlign="center">

               <widget id="muteButton"
                       sliderEnd="84"
                       sliderStart="10"
                       type="MuteButton"/>

               <widget id="captionbutton"
                       type="CaptionButton"/>

               <widget id="tocbutton"
                       type="TOCButton"/>

               <widget id="fullscreenMaxButton"
                       type="FullScreenEnterButton"/>

               <widget id="fullscreenMinButton"
                       type="FullScreenLeaveButton"/>
            </widget>

            <widget id="rightMargin"
                    type="Widget"
                    width="0"/>
         </widget>
      </widgets>
   </chrome>
</config>